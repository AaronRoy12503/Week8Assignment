<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app settings and preferences -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="user_data.db"/>

        <!-- Exclude temporary files and cache -->
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="temp/"/>
        <exclude domain="external" path="temp_images/"/>

        <!-- Include specific files -->
        <include domain="file" path="documents/"/>
        <include domain="file" path="user_profiles/"/>

        <!-- Exclude sensitive data -->
        <exclude domain="database" path="credentials.db"/>
        <exclude domain="sharedpref" path="security_prefs.xml"/>
    </cloud-backup>

    <device-transfer>
        <!-- Include all user data for device transfer -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="documents/"/>
        <include domain="file" path="user_profiles/"/>

        <!-- Exclude temporary and cache data -->
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="temp/"/>
        <exclude domain="external" path="temp_images/"/>

        <!-- Include external files if needed -->
        <include domain="external" path="Pictures/app_photos/"/>
    </device-transfer>
</data-extraction-rules>